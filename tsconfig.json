{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./typescript/*"
      ]
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}